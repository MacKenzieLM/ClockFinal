import java.time.LocalDateTime;

/**
 * This is my alarm object class
 * @author Lauren Smart 19016480
 */
public class AlarmObject {
    
    // variable for alarm name
    String alarmName;
    String time;
    String date;
    
    
    // initialise variable for local time now
    LocalDateTime currentTime = LocalDateTime.now();
   
  
    
    AlarmObject(){
        
    }
    
    /**
    * method for setting date variable
    * @param date 
    */
    public void setDate(String date)
    {
       this.date=date;
       
    }
    
    /**
    * method for getting date variable
    * @return 
    */
    public String getDate()
    {
        return date;
     
        
    }
    
    /**
    * method for setting time variable
    * @param time
    */
    public void setTime(String time)
    {
        this.time=time;
    }
    
    /**
    * method for getting time variable
    * @return 
    */
    public String getTime()
    {
        return time;
      
        
    }


    public LocalDateTime getUpdateDate() 
    {
        return currentTime;
    }

 
    public void setUpdateDate(LocalDateTime currentTime) 
    {
        this.currentTime = currentTime;
    }
    
}
